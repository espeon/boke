---
import Ambilight from "../components/ambilight.astro";
import { IconRow } from "../components/home/icon-row";
import { LastFM } from "../components/home/lastfm.tsx";
import { LastFmBackground } from "../components/lastfm-bg";
import PersistWrapper from "../components/PersistWrapper.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/Layout.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <Ambilight />
  <PersistWrapper>
    <LastFmBackground client:only useDefaultImages={false} />
  </PersistWrapper>
  <main class="mt-2 flex w-full flex-col items-start space-y-6">
    <div class="text-2xl">
      <h2 class="font-semibold">Natalie B.</h2>
      <p class="prose dark:prose-invert text-xl">
        Making stuff for the web and beyond.
      </p>
    </div>

    <div class="prose dark:prose-invert">
      <p>
        Full-stack developer interested in web and audiovisual media. Currently
        at <a href="https://stream.place/">Streamplace</a>, helping make live
        video easy and open.
      </p>
      <p>
        I'm also building <a href="https://teal.fm">teal.fm</a> with <a
          href="https://mmatt.net">Matt</a
        >
        for beautiful music tracking, and in the past I've made <a
          href="https://github.com/espeon/muse">muse</a
        >, which is a local music streaming platform.
      </p>
      <div class="max-w-full">
        <LastFM client:load client:only />
      </div>
    </div>
    <div>
      <p>You can find me elsewhere here:</p>
      <IconRow smaller />
    </div>
  </main>
</Layout>

<style>
  @reference "../styles/global.css";

  .prose a {
    @apply border-b-sky-800 underline dark:border-b-sky-200;
  }
</style>
