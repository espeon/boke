---
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="mb-6 flex items-center justify-between" transition:name="header">
  <nav class="flex items-center gap-4 text-gray-950 dark:text-gray-100">
    <a href="/" class="group relative inline-block">
      <span
        class="transition-opacity duration-200 ease-out group-hover:opacity-0"
        >home</span
      >
      <span
        class="absolute left-0 font-serif text-[1.075rem] tracking-wider opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
        >home</span
      >
    </a>
    <a href="/cv" class="group relative inline-block">
      <span
        class="transition-opacity duration-200 ease-out group-hover:opacity-0"
        >work</span
      >
      <span
        class="absolute left-0 font-serif text-[1.075rem] tracking-wider opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
        >work</span
      >
    </a>
    <a href="/posts" class="group relative inline-block">
      <span
        class="transition-opacity duration-200 ease-out group-hover:opacity-0"
        >posts</span
      >
      <span
        class="absolute left-0 font-serif text-[1.075rem] tracking-wider opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
        >posts</span
      >
    </a>
    <a href="/uses" class="group relative inline-block">
      <span
        class="transition-opacity duration-200 ease-out group-hover:opacity-0"
        >uses</span
      >
      <span
        class="absolute left-0 font-serif text-[1.075rem] tracking-wider opacity-0 transition-opacity duration-200 ease-out group-hover:opacity-100"
        >uses</span
      >
    </a>
  </nav>
  <ThemeToggle />
</header>

<style>
  @reference "../styles/global.css";
  a {
    @apply font-medium text-zinc-800 transition-colors hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-100;
  }
</style>
