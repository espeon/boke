---
import { IconRow } from "./home/icon-row";

let currentYear = new Date().getFullYear();
---

<header class="mt-6 flex items-center justify-between" transition:name="footer">
  <nav class="flex items-center gap-4 text-gray-950 dark:text-gray-400">
    <a href="/"> back to home </a> - <p>&copy; {currentYear} natalie.sh</p>
  </nav>
  <IconRow smaller />
</header>

<style>
  @reference "../styles/global.css";
  a {
    @apply font-medium text-zinc-500 hover:text-zinc-900 hover:underline dark:hover:text-zinc-100;
  }
</style>
