---
// Simple wrapper component for persisting content across Astro page transitions
export interface Props {
  id?: string;
  class?: string;
}

const { id = "persist-wrapper", class: className = "" } = Astro.props;
---

<div id={id} class={className} transition:persist>
  <slot />
</div>

<style>
  #persist-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -10;
    pointer-events: none;
  }
</style>
